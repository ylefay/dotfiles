[bar/bottom]
monitor = eDP-1
bottom = true
width = 100%
height = 16

background = ${bar/top.background}
foreground = ${bar/top.foreground}
[bar/top]
monitor = eDP-1
width = 100%
height = 18

background = #c0000000
foreground = #ffffffff

line-color = ${bar/bottom.background}
line-size = 10

spacing = 1
padding-right = 1
module-margin = 1

font-0 = NotoSans-Regular:size=8;0
font-1 = unicode:size=6;-3
font-2 = FontAwesome:size=8;-2
font-3 = NotoSans-Regular:size=8;-1
font-4 = MaterialIcons:size=10;-1
font-5 = Termsynu:size=8:antialias=false;0
font-6 = Freesans:size=8;-3
font-7 = Siji:pixelsize=10;1"
modules-left = wireless-network mullvadwg battery batteryz cmus
modules-right = cpu memory filesystem pulseaudio date

[module/filesystem]
type = internal/fs

; Mountpoints to display
mount-0 = /
mount-1 = /mnt

; Seconds to sleep between updates
; Default: 10
interval = 10

; Display fixed precision values
; Default: false
fixed-values = true

; Spacing between entries
; Default: 2
spacing = 4

label-unmounted = %mountpoint% 
label-mounted = %mountpoint% %percentage_free%% of %total%



[module/pulseaudio]
type = internal/pulseaudio

; Sink to be used, if it exists (find using `pacmd list-sinks`, name field)
; If not, uses default sink
sink = alsa_output.pci-0000_01_00.1.hdmi-stereo

; Use PA_VOLUME_UI_MAX (~153%) if true, or PA_VOLUME_NORM (100%) if false
; Default: true
use-ui-max = true

; Interval for volume increase/decrease (in percent points)
; Default: 5
interval = 5

[module/cmus]
type = custom/script

exec = ~/player-cmus.sh
exec-if = pgrep -x cmus
interval = 5

click-left = cmus-remote --next
click-right = cmus-remote --prev
click-middle = cmus-remote --pause
scroll-up = cmus-remote --volume +5%
scroll-down = cmus-remote --volume -5%

label-font = 10
format = <label>
#format-underline = ${colors.foreground-alt}
label = %output%
label-maxlen = 150

[module/mullvadwg]
type = custom/script
exec = ~/mullvad.sh
interval = 10

label-font = 10
format = <label>


[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full-at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT1
adapter = ADP1

; If an inotify event haven't been reported in this many
; seconds, manually poll for new values.
;
; Needed as a fallback for systems that don't report events
; on sysfs/procfs.
;
; Disable polling by setting the interval to 0.
;
; Default: 5
poll-interval = 5

[module/batteryz]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full-at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = ADP1

; If an inotify event haven't been reported in this many
; seconds, manually poll for new values.
;
; Needed as a fallback for systems that don't report events
; on sysfs/procfs.
;
; Disable polling by setting the interval to 0.
;
; Default: 5
poll-interval = 5

